<UserControl x:Class="SisComWpf.view.TitleBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">
    <Grid Height="Auto">
    	<Rectangle Stroke="{x:Null}" Height="Auto">
    		<Rectangle.Fill>
    			<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" SpreadMethod="Pad">
    				<GradientStop Color="#FFFFFFFF" Offset="0"/>
    				<GradientStop Color="#FFE8E8E8" Offset="0.545"/>
    				<GradientStop Offset="1" Color="#FFFFFFFF"/>
    			</LinearGradientBrush>
    		</Rectangle.Fill>
    	</Rectangle>
    	<TextBlock Text="Window Title" TextWrapping="Wrap" Foreground="#FF4700F7" FontSize="18" FontWeight="Bold" Margin="8,0,0,0" x:Name="lblTitle" d:LayoutOverrides="Width" />
    	<Button HorizontalAlignment="Right" Content="X" x:Name="btnClose" Style="{DynamicResource styleBtnClose}" Foreground="#FFFFFFFF" FontWeight="Bold" Margin="0,1,6,1" Width="25" />
    </Grid>
</UserControl>
