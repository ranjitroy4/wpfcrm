<UserControl x:Class="SisComWpf.View.Search.SearchScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:data="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="800" d:DesignHeight="600"         
    Height="Auto" Width="Auto">
    
    <Grid Width="Auto" Height="Auto">
    	<Grid.RowDefinitions>
    		<RowDefinition Height="0.11*"/>
    		<RowDefinition Height="0.89*"/>
    	</Grid.RowDefinitions>
		
        <Rectangle RadiusY="5" RadiusX="5" Fill="DarkBlue" Opacity="0.2" Margin="10,10,10,10" Stroke="#FF4F4F4F" Grid.RowSpan="2" />
	
		<Grid Grid.Row="0" Margin="10,10,10,8">
            <ComboBox Name="cboSearch" Width="157" HorizontalAlignment="Left" Margin="6.5,8,0,0" Style="{StaticResource styleCboFind}" />
            <TextBox Name="txtSearch" Margin="167.5,8,81,0" Style="{StaticResource styleTxtFind}" />
            <Button Height="35" Name="btnSearch" Click="btnSearch_Click" Width="69" Margin="0,8,8,0" HorizontalAlignment="Right" VerticalAlignment="Top" >Pesquisar</Button>
            <TextBlock x:Name="lblWarning" Text="" Height="Auto" VerticalAlignment="Top" Margin="6.5,33.96,8,0" Foreground="{DynamicResource styleWarningMsg}" Visibility="Collapsed" />
        </Grid>
		
        <data:DataGrid x:Name="dtgSearch"
					   SelectionChanged="dtgSearch_SelectionChanged" 
					   AutoGenerateColumns="True" 
					   IsReadOnly="True" 
					   Margin="25,8,25,25" 
					   Grid.Row="1" 
					   d:LayoutOverrides="GridBox" />
        
    </Grid>
</UserControl>