<Window x:Class="SisComWpf.View.Main"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SisComWpf.View.Menu"
    Title="Sistema" Height="600" Width="900" xmlns:my="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration" Background="{x:Null}" ResizeMode="CanResizeWithGrip">
    <DockPanel Name="dockPanel1">
    	<DockPanel.Background>
    		<LinearGradientBrush EndPoint="0.93,1.052" StartPoint="0.579,0.335">
    			<GradientStop Color="#FFA58BFF" Offset="1"/>
    			<GradientStop Color="#FF00E9FA" Offset="0.518"/>
    			<GradientStop Color="#FFCAFFF6" Offset="0"/>
    		</LinearGradientBrush>
    	</DockPanel.Background>
        <local:Menu x:Name="menu" DockPanel.Dock="Top" />
        <StatusBar DockPanel.Dock="Bottom" Height="15" Background="#FF6B6B6B" BorderBrush="#FF000000"></StatusBar>
        <Frame DockPanel.Dock="Bottom" x:Name="Frame"></Frame>
    </DockPanel>
</Window>
