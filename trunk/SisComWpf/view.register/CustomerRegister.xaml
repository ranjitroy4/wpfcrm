<UserControl x:Class="SisComWpf.View.Register.CustomerRegister"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="auto" Width="auto"
    xmlns:local="clr-namespace:SisComWpf.View.Register"
    xmlns:model="clr-namespace:SisComWpf.model.datamodel"
    xmlns:view="clr-namespace:SisComWpf.View"
     >
    <UserControl.Resources>
        <model:cliente x:Key="dataObject" />
    </UserControl.Resources>
    <Grid>
        <Button Content="Fechar" Margin="0,5,0,0" x:Name="btnClose" Click="btnClose_Click" Height="23.75" VerticalAlignment="Top" HorizontalAlignment="Right" Width="43.623" />
        <StackPanel x:Name="stkFields" DataContext="{StaticResource dataObject}">
            <local:ToolbarRegister x:Name="toolbar" />
            <TextBlock Text="Nome" Margin="10,0,10,0" />
            <TextBox Width="Auto" Margin="10,0,10,0" Text="{Binding cli_nome}" />
            <TextBlock Text="Endereço" Margin="10,0,10,0"/>
            <TextBox Width="Auto" Margin="10,0,10,0"/>
            <TextBlock x:Name="lblMessage" />

        </StackPanel>
    </Grid>
</UserControl>
