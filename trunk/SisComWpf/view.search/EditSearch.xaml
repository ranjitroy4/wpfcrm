<UserControl x:Class="SisComWpf.View.Search.EditSearch"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:view="clr-namespace:SisComWpf.View.Search"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="800" d:DesignHeight="600"   
    Height="Auto" Width="Auto">
    <Grid>
	<Rectangle RadiusY="5" RadiusX="5" Fill="DarkBlue" Opacity="0.2" Margin="10,10,10,10" Stroke="#FF4F4F4F" />
	<StackPanel Margin="10,10,10,10">
	
        <Button Content="Fechar" 
				x:Name="btnClose" 
				Click="btnClose_Click" 
				VerticalAlignment="Top" HorizontalAlignment="Right" />
				<view:SearchScreen x:Name="ucSearch" />
        <Button x:Name="btnEdit" 
				Content="Editar" 
				Click="btnEdit_Click" 
				VerticalAlignment="Bottom" HorizontalAlignment="Right" />
    </StackPanel>
	</Grid>
</UserControl>
