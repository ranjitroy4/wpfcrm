<UserControl x:Class="SisComWpf.view.shopping.ToolbarShopping"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   Height="Auto" Width="Auto">

    <DockPanel x:Name="dockPanel">
        <ToolBar Height="30" Name="toolBarShopping" Width="Auto" DockPanel.Dock="Top" Margin="5" >
            <Button x:Name="btnNew" Click="btnNew_Click">
                <Button.Content>
                    <TextBlock Text="Nova Compra" />
                </Button.Content>
            </Button>
            <Button x:Name="btnOpen" Click="btnOpen_Click">
                <Button.Content>
                    <TextBlock  Text="Abrir Compra" />
                </Button.Content>
            </Button>
            <Button x:Name="btnSave" Click="btnSave_Click">
                <Button.Content>
                    <TextBlock  Text="Salvar Compra" />
                </Button.Content>
            </Button>
            <Button x:Name="btnDel" Click="btnDel_Click">
                <Button.Content>
                    <TextBlock Text="Apagar Compra" />
                </Button.Content>
            </Button>

        </ToolBar>

    </DockPanel>
</UserControl>
